<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_table"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewProduction">

    <TextView
        android:id="@+id/textView"
        android:layout_width="257dp"
        android:layout_height="61dp"
        android:layout_marginTop="96dp"
        android:background="#6750A3"
        android:fontFamily="sans-serif-black"
        android:paddingLeft="40dp"
        android:paddingTop="12dp"
        android:text="New Production"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/new_id_number"
        android:layout_width="86dp"
        android:layout_height="53dp"
        android:layout_marginTop="88dp"
        android:backgroundTint="#505050"
        android:ems="10"
        android:hint="ID"
        android:inputType="number"
        android:paddingLeft="39dp"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textColorHighlight="#AB2D2D"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/new_quantity_number"
        android:layout_width="93dp"
        android:layout_height="39dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:hint="Quantity"
        android:inputType="number"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_id_number" />

    <EditText
        android:id="@+id/new_job_number"
        android:layout_width="139dp"
        android:layout_height="46dp"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:hint="Job Number"
        android:inputType="number"
        android:paddingLeft="20dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <CheckBox
        android:id="@+id/new_spliced_check"
        android:layout_width="110dp"
        android:layout_height="31dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="111dp"
        android:text="Spliced "
        app:layout_constraintBottom_toTopOf="@+id/new_save_button"
        app:layout_constraintEnd_toStartOf="@+id/new_drop_over_check"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_quantity_number" />

    <CheckBox
        android:id="@+id/new_drop_over_check"
        android:layout_width="145dp"
        android:layout_height="46dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="103dp"
        android:text="Drop over 100' "
        app:layout_constraintBottom_toTopOf="@+id/new_save_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_quantity_number" />

    <Button
        android:id="@+id/new_save_button"
        android:layout_width="159dp"
        android:layout_height="58dp"
        android:layout_marginBottom="76dp"
        android:text="Save"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>